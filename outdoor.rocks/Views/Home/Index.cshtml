
<div ng-controller="HomeCtrl">

    @* Navigation *@
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("OUTDOOR.ROCKS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a class="btn-success">Create trail</a></li>
                    <li>@Html.ActionLink("join us", "Index", "Home", new { area = "" }, null)</li>                    
                </ul>
            </div>
        </div>
    </div>

    @* Intro *@
    <div class="col-md-12 backg">

        <div class="col-md-4 col-md-offset-4 inner col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">

            <div class="text-box">

                <p class="intro">Introducing</p>

                <h2>Ravalic</h2>

                <h3>A Free Responsive HTML5 Template</h3>

                <p>By <span><a href="http://www.html5layouts.com">HTML5 Layouts</a></span></p>

                <p><a href="#" class="link-button">Tell Me Something</a></p>

            </div>

        </div>

    </div>

    @* Country *@
    <div></div>

    @* Banner *@
    <div class="row">
        <div class="col-md-12 banner"></div>
    </div>
    
    @* Feature *@
    <div ng-cloak class="row">

        <h2 class="text-center">
            Featured trails
        </h2>

        <div class="row">
            <div class="col-xs-6 col-md-4" ng-repeat="trail in trails">
                <div href="{{trail.Id}}" class="thumbnail thumbnail-custom" style="background-size:cover; background-image:url('Content/Images/{{trail.CoverPhoto != null ? trail.CoverPhoto : 'Default.jpg'}}')">
                    <label ng-class="trail.LabelDifficultClass">{{trail.Difficult}}</label>
                    <h3>{{trail.Country}}</h3>
                    <h2>{{trail.Name}}</h2>
                    Distance{{trail.Distance}}<br />
                    <div>
                        <ul>
                            <li>{{trail.Type}}</li>
                            <li>{{trail.DurationType}}</li>
                            <li>{{trail.GoodForKids}}</li>
                            <li ng-show="trail.DogAllowed"><img src="~/Content/Images/dog-allowed-icon.png" /></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <button class="btn btn-default btn-block">More</button>
        </div>

    </div>


</div>

@section scripts{
    <script src="~/Scripts/Angular/ngHomeController.js"></script>
}