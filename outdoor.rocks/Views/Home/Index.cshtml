
<div class="mainBody" ng-controller="HomeCtrl">

    @* Navigation *@
    <nav class="navbar navbarCustomGlobal">
        <div class="a-navigation">

            @Html.ActionLink("JOIN US", "Index", "Home", new { area = "" }, new { @class = "a-join" })
            @Html.ActionLink("OUTDOOR.ROCKS", "Index", "Home", new { area = "" }, new { @class = "a-header-label" })
            <a class="a-createtrail">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                <span class="a-createtrail-text">CREATE TRAIL</span>
            </a>
        </div>
    </nav>

    @* Intro *@
    <div class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h1 class="intro-heading">Find your route</h1>
                        <div class="inner-addon right-addon">
                            <input type="text" class="col-xs-12" placeholder="Enter location" />
                            <i class="glyphicon glyphicon-lg glyphicon-search"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @* Country *@
        <div class="country"></div>

        @* Banner *@
        <div class="row">
            <div class="col-md-12 banner"></div>
        </div>

        @* Feature *@
        <div ng-cloak class="row">

            <h2 class="text-center">
                Featured trails
            </h2>

            <div class="row">
                <div class="col-xs-6 col-md-4" ng-repeat="trail in trails">
                    <div href="{{trail.Id}}" class="thumbnail thumbnail-custom" style="background-size:cover; background-image:url('Content/Images/{{trail.CoverPhoto != null ? trail.CoverPhoto : 'Default.jpg'}}')">
                        <label ng-class="trail.LabelDifficultClass">{{trail.Difficult}}</label>
                        <h3>{{trail.Country}}</h3>
                        <h2>{{trail.Name}}</h2>
                        Distance{{trail.Distance}}<br />
                        <div>
                            <ul>
                                <li>{{trail.Type}}</li>
                                <li>{{trail.DurationType}}</li>
                                <li>{{trail.GoodForKids}}</li>
                                <li ng-show="trail.DogAllowed"><img src="~/Content/Images/dog-allowed-icon.png" /></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <button class="btn btn-default btn-block">More</button>
            </div>

        </div>
    </div>

</div>

@section scripts{
    <script src="~/Scripts/Angular/ngHomeController.js"></script>
}