
<div class="mainBody" ng-controller="HomeCtrl">

    @* Navigation *@
    <nav class="navbar navbarCustomGlobal">
        <div class="a-navigation">
            <a class="a-join" data-toggle="modal" data-target=".bs-example-modal-lg">JOIN US</a>
            @*@Html.ActionLink("JOIN US", "Index", "Home", new { area = "" }, new { @class = "a-join" })*@
            @Html.ActionLink("OUTDOOR.ROCKS", "Index", "Home", new { area = "" }, new { @class = "a-header-label" })
            <a class="a-createtrail">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                <span class="a-createtrail-text">CREATE TRAIL</span>
            </a>
        </div>
    </nav>

    @* Intro *@
    <div class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-md-8 col-md-offset-2">
                        <h1 class="intro-heading">Find your route</h1>
                        <div class="inner-addon right-addon input-group">
                            <input type="text"  class="typeahead tt-query"
                                    autocomplete="off" spellcheck="false" placeholder="Enter location" required 
                                    ng-model ="inputValue" ng-keypress="$event.keyCode == 13 ? inputPressEnter(inputValue) : null;"  ng-trim="false"/>
                            <i class="glyphicon glyphicon-lg glyphicon-search"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mainContainer">
        @* Country *@
        <section class="section-country" ng-cloak>
            <ul class="ul-regions">
                <li ng-repeat="region in regions">
                    <span class="" ng-class="region.selected ? 'li-region-selected':''" ng-click="selectRegion($index)">
                        {{region.region}}
                    </span>
                    <ul ng-if="region.selected" class="hidden-md hidden-lg ul-countries-of-regions">
                        <li ng-repeat="country in countries">
                            <span>{{country}}</span>
                        </li>
                    </ul>
                </li>                
            </ul>
            <ul class="hidden-xs hidden-sm ul-countries-of-regions">
                <li ng-repeat="country in countries">
                    <span>{{country}}</span>
                </li>
            </ul>
            
        </section>

        @* Banner *@
        <section class="row section-banner">
            <div class="col-md-12 banner"></div>
        </section>

        @* Feature *@
        <section ng-cloak class="row">

            <h2 class="text-center h-feature-header">
                Featured trails
            </h2>

            <div class="row"  ng-cloak>
                <div class="col-xs-6 col-sm-4 col-md-4 div-trails" ng-repeat="trail in trails | limitTo: limitTrails">
                    <div class="thumbnail thumbnail-custom" style="{{trail.CoverPhoto}}">
                        <label ng-class="trail.LabelDifficultClass">{{trail.Difficult}}</label>
                        <h3 class="text-default">{{trail.Country}}</h3>
                        <h2>{{trail.Name}}</h2>
                        <h4 class="text-warning">Distance {{trail.Distance}}</h4>
                        <div>
                            <ul class="ul-trails-icon">
                                <li><img src="~/Content/Icons/white/{{trail.Type}}" /></li>
                                <li><img src="~/Content/Icons/white/{{trail.DurationType}}" /></li>
                                <li ng-show="trail.GoodForKids"><img src="~/Content/Icons/white/good-for-kids.png" /></li>
                                <li ng-show="trail.DogAllowed"><img src="~/Content/Icons/white/dog-freindly.png" /></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <button ng-click="moreTrails()" class="btn btn-default btn-lg btn-block btn-moretrails">More</button>
            </div>

        </section>
    </div>

</div>

@* Modal window *@
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modal-custom">
            <h2 class="">Join us</h2>
            <form class="form-horizontal form-custom">                
                <div class="form-group">
                    <label class="col-md-2">Email</label>
                    <div class="col-md-10">
                        <input type="email" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2">Pasword</label>
                    <div class="col-md-10">
                        <input type="password" class="form-control"/>
                    </div>
                </div>

                <button type="submit" class="btn btn-default btn-success pull-right">Submit</button>
            </form>
        </div>
    </div>
</div>

@section scripts{
<script src="~/Scripts/CustomJS/script.js"></script>
<script src="~/Scripts/Angular/ngHomeController.js"></script>
}